@model StoreFront.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<div class="w-50 m-auto">
    <h2 class="text-center mb-2">Delete @Model.Email ?</h2>

    <h3 class="text-center mb-2">Are you sure you want to delete this User?</h3>

    <div class="text-center mt-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <a href="@Url.Action("Index", "UsersAdmin")" class="site-btn cancel-btn ml-2">Cancel</a>
                <input type="submit" value="Delete" class="site-btn admin-btn ml-2" /> 
            </div>
        }
    </div>
</div>
