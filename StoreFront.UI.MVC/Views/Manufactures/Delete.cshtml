@model StoreFront.DATA.EF.Manufacture

@{
    ViewBag.Title = "Delete Manufacturer";
}

<h2 class="text-center my-5">@ViewBag.Title</h2>

<h3 class="text-center mb-5">Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal text-center">
        <dt>
            @Html.DisplayNameFor(model => model.ManufactureName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ManufactureName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        @if (Model.State != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.State.StateName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State.StateName)
            </dd>
        }


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions d-flex justify-content-center">
            <input type="submit" value="Delete" class="btn btn-danger mr-4" />
            @Html.ActionLink("Back to List", "Index", "Manufacturer", new { @class = "btn btn-secondary" })
        </div>
    }
</div>
