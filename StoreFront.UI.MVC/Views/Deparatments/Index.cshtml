 @model IEnumerable<StoreFront.DATA.EF.Deparatment>

@{
    ViewBag.Title = "Departments";
}

<h2 class="text-center mb-5">@ViewBag.Title</h2>


<table class="table w-50 m-auto">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td class="text-right">
            @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID }, new { @class = "btn btn-secondary" }) 
            @Html.ActionLink("Details", "Details", new { id = item.DepartmentID }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

<p class="text-center mt-5">
    @Html.ActionLink("Create New Department", "Create", "Departments", new { @class = "btn btn-light" })
</p>
