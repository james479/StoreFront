@model StoreFront.DATA.EF.Deparatment

@{
    ViewBag.Title = "Delete Department";
}

<h2 class="text-center my-5">@ViewBag.Title</h2>

<h3 class="text-center mb-5">Are you sure you want to delete this?</h3>
<div class="admin-form">
    <div class="d-flex justify-content-center">
        <span class="font-weight-bold mr-3 mb-5">
            @Html.DisplayNameFor(model => model.DepartmentName):
        </span>

        <span>
            @Html.DisplayFor(model => model.DepartmentName)
        </span>

    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions d-flex justify-content-around">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", "Departments", new { @class = "btn btn-secondary" })
        </div>
    }
</div>
