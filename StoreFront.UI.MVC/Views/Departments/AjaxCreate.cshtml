@model StoreFront.DATA.EF.Department


@using (Html.BeginForm("", "", FormMethod.Post, new { id = "DepartmentCreateForm" }))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="d-flex justify-content-between align-items-center m-auto py-3">
                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a Department" } })
                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                <div class="col-md-1">
                    <input type="submit" value="Add" class="site-btn admin-btn" />
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
