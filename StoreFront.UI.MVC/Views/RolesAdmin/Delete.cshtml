@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = $"Delete {Model.Name}";
}

<div class="w-50 m-auto">
    <h2 class="text-center mb-2">Delete the role @Model.Name</h2>

    <h3 class="text-center mb-2">Are you sure you want to delete this Role? </h3>
    <p class="text-center mb-4">Deleting this Role will remove all users from this role. It will not delete the users.</p>
    <div>
        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions text-center">
                <a href="@Url.Action("Index", "RolesAdmin")" class="site-btn cancel-btn">Cancel</a>
                <input type="submit" value="Delete" class="admin-btn site-btn ml-2" />
            </div>
        }
    </div>
</div>
