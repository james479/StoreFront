@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
}

<div class="container">

    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    <table class="table w-50 m-auto">
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@Url.Action("Details", "RolesAdmin", new { id = item.Id})" class="action-icon"><i class="fas fa-info-circle"></i></a>
                    <a href="@Url.Action("Edit", "RolesAdmin", new { id = item.Id})" class="action-icon"><i class="far fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "RolesAdmin", new { id = item.Id})" class="action-icon"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }

    </table>

    <!--Create Button-->
    <div class="text-center">
        @Html.ActionLink("Create New Role", "Create", "RolesAdmin", new { @class = "site-btn admin-btn mt-4" })
    </div>
</div>
